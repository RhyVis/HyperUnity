  </RecipeDef>

  <!-- Covert -->

  <RecipeDef Name="R_TwistMealCovRecipeBase" Abstract="True">
    <description>通过减少退行套餐的扭曲效果来增加其它效果。</description>
    <jobString>正在转化退行套餐。</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workAmount>5</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>R_SpecialMeal</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>R_SpecialMeal</li>
      </thingDefs>
    </fixedIngredientFilter>
    <recipeUsers>
      <li>CraftingSpot</li>
    </recipeUsers>
  </RecipeDef>

