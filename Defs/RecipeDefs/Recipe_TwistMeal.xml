<Defs>
  <!-- Special Meal -->
  <RecipeDef Name="R_TwistMealRecipeBase" ParentName="CookMealBase" Abstract="True">
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>True</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <recipeUsers>
      <li>FueledStove</li>
      <li>ElectricStove</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef ParentName="R_TwistMealRecipeBase">
    <defName>R_TwistMealRecipe</defName>
    <label>制作退行套餐</label>
    <description>浪费很多原料来做这个没意义的东西。</description>
    <jobString>正在制作退行套餐。</jobString>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>MeatRaw</li>
            <li>AnimalProductRaw</li>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>0.50</count>
      </li>
    </ingredients>
    <products>
      <R_SpecialMeal>1</R_SpecialMeal>
    </products>
    <displayPriority>1535</displayPriority>
  </RecipeDef>

  <RecipeDef ParentName="R_TwistMealRecipeBase">
