<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef Abstract="True" Name="R_ResourceBase">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <drawerType>MapMeshOnly</drawerType>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <techLevel>Spacer</techLevel>
    <useHitPoints>False</useHitPoints>
    <selectable>True</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>1000</stackLimit>
    <soundInteract>Silver_Drop</soundInteract>
    <soundDrop>Silver_Drop</soundDrop>
    <resourceReadoutAlwaysShow>True</resourceReadoutAlwaysShow>
    <alwaysHaulable>True</alwaysHaulable>
    <drawGUIOverlay>True</drawGUIOverlay>
    <rotatable>False</rotatable>
    <pathCost>0</pathCost>
    <allowedArchonexusCount>-1</allowedArchonexusCount>
    <tickerType>Normal</tickerType>
    <statBases>
      <Beauty>0</Beauty>
      <Mass>0.05</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
  </ThingDef>

  <ThingDef ParentName="R_ResourceBase">
    <thingClass>Medicine</thingClass>
    <defName>R_SpecialMedicine</defName>
    <label>超联结医药</label>
    <description>类似闪耀世界医药的超联结医药，效果与其不相上下。</description>
    <graphicData>
      <texPath>Things/Item/Medicine/RSpecialMedicine</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.6</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>25</MarketValue>
      <MedicalPotency>5000</MedicalPotency>
      <MedicalQualityMax>50000</MedicalQualityMax>
    </statBases>
    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Usable">
        <useJob>UseItem</useJob>
        <useLabel>使用{0_label}</useLabel>
        <useDuration>0</useDuration>
      </li>
      <li Class="CompProperties_UseEffect">
        <compClass>CompUseEffect_FixWorstHealthCondition</compClass>
      </li>
      <li Class="CompProperties_UseEffectPlaySound">
        <soundOnUsed>MechSerumUsed</soundOnUsed>
      </li>
    </comps>
  </ThingDef>
</Defs>